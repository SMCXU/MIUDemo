<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.testtelecontroller.MainActivity">

    <EditText
        android:id="@+id/et_ip"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="请输入设备IP" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_ip"
        android:layout_centerHorizontal="true"
        android:onClick="btOnclick"
        android:text="Button" />

    <RelativeLayout
        android:id="@+id/rl_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/bt_top"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:onClick="btOnclick"
            android:text="TOP" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_top"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:onClick="btOnclick"
            android:text="OK" />

        <Button
            android:id="@+id/bt_left"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_top"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/bt_ok"
            android:onClick="btOnclick"
            android:text="LEFT" />

        <Button
            android:id="@+id/bt_right"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_top"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/bt_ok"
            android:onClick="btOnclick"
            android:text="RIGHT" />

        <Button
            android:id="@+id/bt_bottom"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_ok"
            android:layout_centerHorizontal="true"
            android:onClick="btOnclick"
            android:text="BOTTOM" />

        <Button
            android:id="@+id/bt_back"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="btOnclick"
            android:text="BACK" />

        <Button
            android:id="@+id/bt_addv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/bt_back"
            android:onClick="btOnclick"
            android:text="VOLICE+" />

        <Button
            android:id="@+id/bt_reducev"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/bt_back"
            android:onClick="btOnclick"
            android:text="VOLICE-" />

        <Button
            android:id="@+id/bt_home"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="btOnclick"
            android:text="HOME" />
    </RelativeLayout>

</RelativeLayout>
