<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@android:color/black"
    tools:context="com.example.customrecycle.TestEffectActivity">

    <LinearLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/ll_contioner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:focusedByDefault="true"
            android:focusable="true"
            android:id="@+id/iv_1"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x326"
            android:src="@mipmap/mainview_cloudlist" />

        <ImageView
            android:nextFocusLeft="@id/iv_1"
            android:focusable="true"
            android:id="@+id/iv_2"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x326"
            android:layout_margin="@dimen/x50"
            android:src="@mipmap/mainview_cloudlist" />

        <ImageView
            android:nextFocusLeft="@id/iv_2"
            android:focusable="true"
            android:id="@+id/iv_3"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x326"
            android:src="@mipmap/mainview_cloudlist" />

        <ImageView
            android:nextFocusLeft="@id/iv_3"
            android:focusable="true"
            android:id="@+id/iv_4"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x326"
            android:layout_margin="@dimen/x50"
            android:scaleType="fitXY"
            android:src="@mipmap/mainview_cloudlist" />

        <ImageView
            android:nextFocusLeft="@id/iv_4"
            android:focusable="true"
            android:id="@+id/iv_5"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x326"
            android:scaleType="fitXY"
            android:src="@mipmap/mainview_cloudlist" />
    </LinearLayout>
    <!-- 最顶层边框 -->

    <com.example.customrecycle.view.MainUpView
        android:id="@+id/mMainUpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:upImageRes="@drawable/test_rectangle" />
</LinearLayout>
