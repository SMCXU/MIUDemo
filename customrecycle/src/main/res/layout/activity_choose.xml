<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.example.customrecycle.activitys.ChooseActivity">

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:focusable="false"
        android:src="@mipmap/weqrcode" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_qrcode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:text="打开微信扫描二维码并输入本机IP:192.168.1.27"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_ip"
        android:layout_marginTop="20dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="false"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"


            android:background="@drawable/bg_holo_blue_bright"
            android:focusable="true"
            android:focusedByDefault="true"
            android:gravity="center"
            android:text="游客登陆"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/tv_visitor"
            android:background="@drawable/bg_holo_blue_bright"
            android:focusable="true"
            android:gravity="center"
            android:text="管理员登陆"
            android:textColor="@color/white"
            android:textSize="40sp" />


    </RelativeLayout>
    <com.example.customrecycle.view.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:upImageRes="@drawable/test_rectangle" />


</RelativeLayout>
