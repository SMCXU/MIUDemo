<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_container"
    android:gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@drawable/img_background"
    tools:context="com.example.customrecycle.activitys.ChooseActivity">
    <TextView
        android:focusedByDefault="true"
        android:id="@+id/tv_visitor"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_time"
        android:layout_marginRight="50dp"
        android:background="@drawable/bg_holo_blue_bright"
        android:focusable="true"
        android:gravity="center"
        android:text="游客登陆"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/tv_visitor"
        android:background="@drawable/bg_holo_blue_bright"
        android:focusable="true"
        android:gravity="center"
        android:text="管理员登陆"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <com.example.customrecycle.view.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:upImageRes="@drawable/test_rectangle" />
</RelativeLayout>
