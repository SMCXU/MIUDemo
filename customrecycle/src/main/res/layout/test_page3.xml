<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <com.example.customrecycle.view.SmoothHorizontalScrollView
        android:id="@+id/test_hscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <com.example.customrecycle.weight.appweight.TvZorderLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:focusable="false">

            <com.example.customrecycle.weight.appweight.TvZorderRelativeLayout
                android:id="@+id/tv_relativelayout_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x100"
                android:clipToPadding="false"
                android:focusable="false"
                android:gravity="center">

                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_1"
                    android:layout_width="@dimen/x560"
                    android:layout_height="@dimen/x320"
                    android:layout_margin="@dimen/x10"
                    android:background="@mipmap/mainview_tuijian"
                    android:focusable="true"
                    android:nextFocusUp="@+id/title_bar3">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="苏打蓝"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>

                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_2"
                    android:layout_width="@dimen/x560"
                    android:layout_height="@dimen/x320"
                    android:layout_margin="@dimen/x10"
                    android:layout_toRightOf="@+id/rf_1"
                    android:background="@mipmap/mainview_tuijian"
                    android:focusable="true"
                    android:nextFocusUp="@+id/title_bar3">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="苏打红"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>

                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_3"
                    android:layout_width="@dimen/x560"
                    android:layout_height="@dimen/x320"
                    android:layout_margin="@dimen/x10"
                    android:layout_toRightOf="@+id/rf_2"
                    android:background="@mipmap/mainview_tuijian"
                    android:focusable="true"
                    android:nextFocusUp="@+id/title_bar3">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="苏打紫"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>

                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_4"
                    android:layout_width="@dimen/x270"
                    android:layout_height="@dimen/x420"
                    android:layout_below="@id/rf_1"
                    android:layout_margin="@dimen/x10"
                    android:background="@mipmap/mainview_huodong"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_1">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="Joker"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>

                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_5"
                    android:layout_width="@dimen/x270"
                    android:layout_height="@dimen/x420"
                    android:layout_below="@id/rf_1"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_4"
                    android:layout_toRightOf="@id/rf_4"
                    android:background="@mipmap/mainview_huodong"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_1">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="Jack"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>

                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_6"
                    android:layout_width="@dimen/x270"
                    android:layout_height="@dimen/x420"
                    android:layout_below="@id/rf_2"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_5"
                    android:layout_toRightOf="@id/rf_5"
                    android:background="@mipmap/mainview_huodong"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_2">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="Queen"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>

                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_7"
                    android:layout_width="@dimen/x270"
                    android:layout_height="@dimen/x420"
                    android:layout_below="@id/rf_2"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_6"
                    android:layout_toRightOf="@id/rf_6"
                    android:background="@mipmap/mainview_huodong"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_2">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="King"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>
                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_8"
                    android:layout_width="@dimen/x270"
                    android:layout_height="@dimen/x420"
                    android:layout_below="@id/rf_3"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_7"
                    android:layout_toRightOf="@id/rf_7"
                    android:background="@mipmap/mainview_huodong"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_3">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="Ace"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>
                <com.example.customrecycle.weight.appweight.RoundedFrameLayout
                    android:id="@+id/rf_9"
                    android:layout_width="@dimen/x270"
                    android:layout_height="@dimen/x420"
                    android:layout_below="@id/rf_3"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_8"
                    android:layout_toRightOf="@id/rf_8"
                    android:background="@mipmap/mainview_huodong"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_3">

                    <com.example.customrecycle.weight.appweight.MarqueeText
                        android:id="@+id/mt_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="Hearts"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.customrecycle.weight.appweight.RoundedFrameLayout>

            </com.example.customrecycle.weight.appweight.TvZorderRelativeLayout>
        </com.example.customrecycle.weight.appweight.TvZorderLinearLayout>
    </com.example.customrecycle.view.SmoothHorizontalScrollView>

</RelativeLayout>