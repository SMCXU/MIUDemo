                        android:textSize="15sp" />

                </com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout>

                <com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout
                    android:id="@+id/rf_6"
                    android:layout_width="@dimen/x420"
                    android:layout_height="@dimen/x160"
                    android:layout_below="@id/rf_2"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_5"
                    android:layout_toRightOf="@id/rf_5"
                    android:background="@color/cadetblue"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_2">

                    <com.example.zlq_pc.miudemo.weight_flash.MarqueeText
                        android:id="@+id/mt_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="就想测试一下如果文字多的话会怎么样1111111111111111111111111111111111111111"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout>

                <com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout
                    android:id="@+id/rf_7"
                    android:layout_width="@dimen/x480"
                    android:layout_height="@dimen/x160"
                    android:layout_below="@id/rf_3"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_6"
                    android:layout_toRightOf="@id/rf_6"
                    android:background="@color/cadetblue"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_3">

                    <com.example.zlq_pc.miudemo.weight_flash.MarqueeText
                        android:id="@+id/mt_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
