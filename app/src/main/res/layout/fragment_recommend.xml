                        android:textSize="15sp" />

                </com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout>

                <com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout
                    android:id="@+id/rf_4"
                    android:layout_width="@dimen/x370"
                    android:layout_height="@dimen/x160"
                    android:layout_below="@id/rf_1"
                    android:layout_margin="@dimen/x10"
                    android:background="@color/cadetblue"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_1">

                    <com.example.zlq_pc.miudemo.weight_flash.MarqueeText
                        android:id="@+id/mt_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="就想测试一下如果文字多的话会怎么样1111111111111111111111111111111111111111"
                        android:textColor="@color/gold"
                        android:textSize="15sp" />

                </com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout>

                <com.example.zlq_pc.miudemo.weight_flash.RoundedFrameLayout
                    android:id="@+id/rf_5"
                    android:layout_width="@dimen/x170"
                    android:layout_height="@dimen/x160"
                    android:layout_below="@id/rf_1"
                    android:layout_margin="@dimen/x10"
                    android:layout_toEndOf="@id/rf_4"
                    android:layout_toRightOf="@id/rf_4"
                    android:background="@color/cadetblue"
                    android:focusable="true"
                    android:nextFocusUp="@id/rf_1">

                    <com.example.zlq_pc.miudemo.weight_flash.MarqueeText
                        android:id="@+id/mt_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/border_down_shape"
                        android:gravity="center"
                        android:padding="15px"
                        android:text="就想测试一下如果文字多的话会怎么样1111111111111111111111111111111111111111"
